<div class="text-center" id="home">
   <div class="hero">
      <div class="overlay container">
          <h2 class="fs-1 pt-4 pb-3">Access our database of Plants, Fungi and Algae</h2>
          <div class="d-flex justify-content-between">
            <div class=""></div>
          </div>
      </div>
   </div>
</div>
<div class="second-sticky">
    <ul class="nav nav-tabs container">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Plants <span>(<%= @all_plants_count %>)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Fungi <span>(X)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Algae <span>(X)</span></a>
      </li>
    </ul>
</div>
<div class="h-100 container px-0 py-3 d-flex flex-column flex-md-row">
  <div class="vertical-nav mb-2">
    <ul class="nav flex-row flex-md-column">
      <li class="nav-item">
        <a class="nav-link active" href="#">All</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Computers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Laptops</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Landline</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Sim Cards</a>
      </li>
    </ul>
  </div>
  <div class="list-devices">
    <div class="container overflow-hidden">
      <div class="row g-2 mt-0">
        <% @plants.each do |plant| %>
          <div class="col-xl-6 col-md-12">
            <div class="card m-0 px-0">
              <div class="card-content">
                <div class="card-body clearfix">
                  <div class="media align-items-stretch d-flex mb-0">
                    <figure class="align-self-center mb-0">
                      <%= image_tag(image_path("plant_icon.png"), style: 'width:5rem' ) %>
                    </figure>
                    <div class="media-body flex-grow-1 pt-2">
                      <div class="col-12"><h4 class="mb-0"><%= plant.taxon_name %></h4></div>
                      <div class="row d-flex w-100 flex-row">
                        <div class="col-md-12 col-lg-6">
                          <span>Found by</span>
                          <span class="mb-0 mt-2"><%= plant.taxon_authors %></span>
                          <span>in <%= plant.first_published.match(/\d{4}/)[0] %></span>
                        </div>
                        <div class="col-md-12 col-lg-6 px-0 d-flex align-items-end justify-content-end"><p class="mb-0 text-end mt-2">IPNI-id: <%= plant.ipni_id || 'N/A' %></p></div>
                      </div>
                      <div class="mt-2">
                        <% if logged_in_as_admin? %>
                          <button type="button" class="btn btn-primary">Edit</button>
                          <button type="button" class="btn btn-secondary">Delete</button>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
  </div>
</div>
