<%= form_with(model: @new_admin_session, scope: :session, url: login_path,
        html: {id: 'login-form', class: "row justify-content-center"}, 
        data: {turbo: "false"}) do |f| %>
        <div class="wrap col-md-7 col-lg-5">
            <figure class="img login-image mb-0 text-center py-4">
                <%= image_tag(image_path('mcr_logo.png'), style: '')%>
            </figure>
            <% if flash[:notice].present? %>
                <%= render "partials/flash" %> 
            <% end %>
                <div class="login-wrap p-4 p-md-5 pt-md-3">
                    <div class="d-flex">
                        <div class="w-100 text-center">
                            <h3 class="mb-0">Sign In</h3>
                        </div>
                    </div>
                    <form action="#" class="signin-form">
                        <div class="form-group mt-0">
                            <label class="form-control-placeholder py-2 fs-5" for="username">Email</label>
                            <%= f.email_field :email, class: "form-control", required: true %>
                        </div>
                        <div class="form-group">
                            <label class="form-control-placeholder py-2 fs-5" for="password">Password</label>
                             <%= f.password_field :password, class: "form-control", required: true %>
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Log in", class: "form-control btn btn-primary rounded submit px-3" %>
                        </div>
                        <!--
                        <div class="form-group d-md-flex">
                            <div class="w-50 text-left">
                                <label class="checkbox-wrap checkbox-primary mb-0">Remember Me
                                <input type="checkbox" checked="">
                                <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="w-50 text-md-right">
                                <a href="#">Forgot Password</a>
                            </div>
                        </div>
                        -->
                    </form>
                </div>
            </div>
        </div>
<% end %>
